{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Badge",
  "slug": "badge",
  "blockTypes": ["core/paragraph"],
  "styles": {
    "css": "width: fit-content",
    "typography": {
      "fontSize": "14px",
      "lineHeight": "1.5",
      "letterSpacing": "normal"
    },
    "color": {
      "background": "var:preset|color|primary",
      "text": "var:preset|color|primary-foreground"
    },
    "border": {
      "radius": "16px"
    },
    "spacing": {
      "padding": {
        "top": "0.25rem",
        "right": "1rem",
        "bottom": "0.25rem",
        "left": "1rem"
      }
    },
    "elements": {
      "link": {
        "typography": {
          "textDecoration": "none"
        }
      }
    }
  },
  "example": {
    "attributes": {
      "className": "is-style-badge"
    },
	"content": "Badge"
  }
}
